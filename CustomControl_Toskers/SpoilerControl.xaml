<UserControl x:Class="CustomControl_Toskers.SpoilerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControl_Toskers"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <Grid>
        <Grid x:Name="contentGrid" Visibility="Collapsed">
            <DockPanel Margin="50">
                <Button Content="Hide" DockPanel.Dock="Bottom" />
                <ContentControl Content="" DockPanel.Dock="Top"/>
            </DockPanel>
        </Grid>
        <Grid x:Name="spoilerGrid" Visibility="Visible">
            <DockPanel Margin="50">
                <Button Content="Show Spoiler" DockPanel.Dock="Bottom" />
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>
