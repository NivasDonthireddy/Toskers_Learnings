<Window x:Class="StackPanel_DockPanel_Toskers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StackPanel_DockPanel_Toskers"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="24">
    <Grid>
        <DockPanel  >
            <Button Content="1st Button" DockPanel.Dock="Top" />
            <Button Content="3rd Button" DockPanel.Dock="Left" />
            <Button Content="2nd Button" DockPanel.Dock="Bottom" />
            <Button Content="4th Button" />
        </DockPanel>
    </Grid>
</Window>
