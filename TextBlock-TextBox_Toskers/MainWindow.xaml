<Window x:Class="TextBlock_TextBox_Toskers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextBlock_TextBox_Toskers"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="This is a textbox" FontSize="24" />
            <TextBlock TextTrimming="CharacterEllipsis"  Text="This is a textbox  and it has a very long text" FontSize="24" />
            <TextBlock FontSize="24" >This is a very long text <LineBreak/> This is other text "</TextBlock>
            <TextBlock FontSize="24" TextWrapping="Wrap" >This is a very long text This is other text "</TextBlock>

            <TextBox FontSize="24" />
            <TextBox AcceptsReturn="True" FontSize="24" />
            <TextBox AcceptsReturn="True" FontSize="24" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Window>
